<div class="modal fade" id="order-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Who is this <span id="active-drink-span"></span> for?</h5>
      </div>
      <div class="modal-body">
        <input class="form-control" id="order-name-input" type="text" placeholder="Your name">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="order-cancel-button" data-dismiss="modal">Nevermind</button>
        <button type="button" class="btn btn-primary" id="order-submit-button">
          <span class="spinner-border spinner-border-sm" id="order-submit-button-spinner" style="display: none" role="status" aria-hidden="true"></span>
          Order!
        </button>
      </div>
    </div>
  </div>
</div>
