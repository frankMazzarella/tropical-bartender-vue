<button class="list-group-item list-group-item-action drink-item" data-toggle="modal" data-target="#order-modal" data-drink='<%= JSON.stringify(drink) %>'>
  <%= drink.name %><br>
  <small>
    <% drink.ingredients.forEach((ingredient, index) => { %>
      <%= ingredient %><% if (drink.ingredients.length !== index + 1) { %>,<% } %>
    <% }); %>
  </small>
</button>
